@model BugTracker.Models.ViewModels.NewProjectVm
@{
    ViewData["Title"] = "NewProjectForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Projects" asp-action="Index">Projects</a></li>
    <li class="breadcrumb-item active">New</li>
</ol>

<h2>New Project</h2>

<form asp-controller="Projects" asp-action="Post" method="post" class="form-group">
    <div class="form-group">
        <label asp-for="@Model.Project.Title"></label>
        <input asp-for="@Model.Project.Title" class="form-control" />
        <span asp-validation-for="@Model.Project.Title"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

