@model BugTracker.Models.ViewModels.NewBugVm
@{
    ViewData["Title"] = "BugForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Projects" asp-action="Index">Projects</a></li>
    <li class="breadcrumb-item"><a asp-controller="Projects" asp-action="Detail" asp-route-id="@Model.Bug.ProjectId">@Model.ProjectName</a></li>
    <li class="breadcrumb-item active">New Bug</li>
</ol>

<h2>New Bug</h2>

@using (Html.BeginForm("New", "Bugs"))
{
    <div>
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Bug.Title)
        @Html.TextBoxFor(b => b.Bug.Title)
        @Html.ValidationMessageFor(b => b.Bug.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Bug.Description)
        @Html.TextBoxFor(b => b.Bug.Description)
        @Html.ValidationMessageFor(b => b.Bug.Description)
    </div>

    @Html.AntiForgeryToken()

    <button type="submit" action="Submit" class="btn btn-primary m-3">Submit</button>
    <a asp-controller="Projects" asp-action="Detail" asp-route-id="@Model.Bug.ProjectId" class="btn btn-primary m-3">Cancel</a> 
}